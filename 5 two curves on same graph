from matplotlib import pyplot as plt
import numpy as np

x = np.linspace(0,10,1000)
y = np.linspace(0,10,1000)

#we can plot more then one curve on same graph
plt.plot(x, np.sin(x), '-g', label='sin(x)')      # 1st curve
plt.plot(y, np.cos(y), '--r', label='cos(y)')     # 2nd curve

plt.legend()
plt.show()

#this line of code will sace the figure in given path
plt.savefig('/Users/rahulverma/desktop/Figure_3.png')

